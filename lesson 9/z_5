k1=0
k2=0
s1=0
s2=0
a=int(input("Введите количество учеников в классе"))
for i in range (a):
    n=int(input("Введите рост ученика "))
    if n>0:
        k1=k1+1
        s1=s1+n
    else:
        k2=k2+1
        s2=s2+(-n)
sred1=s1/k2
sred2=s2/k2
print("среднее арифметическое роста девочек % 5.2f"%sred1,"Среднее арифметическое роста мальчиков равно % 5.2f"%sred2)

